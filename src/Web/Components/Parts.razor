@using Models.Types
@using Models.Media;
<table class="table table-striped">
    <thead>
    @{ int ordinal = 0;}
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>SKU</th>
        <th>Barcode</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Part part in AllParts.OrderBy(part => part.Name))
    {
        <tr>
            <td>@(++ordinal)</td>
            <td>@part.Name</td>
            <td>@part.Sku.Value</td>
            <td><img src="data:@part.Sku.ToCode39(25).EncodeBase64().Content"/></td>
        </tr>
    }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<Part> AllParts { get; set; }
}